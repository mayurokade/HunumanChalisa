<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MenuFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/doha_gradiant">
        <LinearLayout
            android:id="@+id/ll_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="#EA785F"
            >
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/ic_alarm"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_regular"
                android:text="Set Alarm"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rington"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="#EA785F"
            >
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/ic_call"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_regular"
                android:text="Set as Ringtone"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_back_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="#EA785F"
            >
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/ic_gallery"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_regular"
                android:text="Set as Background"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp20"
            app:fontFamily="@font/roboto_regular"
            android:text="Set as Ringtone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20"
            android:layout_marginLeft="@dimen/dp30"/>

        <LinearLayout
            android:id="@+id/ll_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="#EA785F"
            >
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/ic_sms"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_regular"
                android:text="SMS"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_whats_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="#EA785F"
            >
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/ic_whatsapp_logo"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_regular"
                android:text="whats App"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"/>
        </LinearLayout>
    </LinearLayout>
</layout>